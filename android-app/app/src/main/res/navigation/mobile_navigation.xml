<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="de.dhbw.ka.se.fibo.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_navigation_adding"
            app:destination="@id/navigation_adding" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="de.dhbw.ka.se.fibo.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="de.dhbw.ka.se.fibo.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_adding"
        android:name="de.dhbw.ka.se.fibo.ui.adding.AddingFragment"
        android:label="@string/title_adding"
        tools:layout="@layout/fragment_adding" />
</navigation>